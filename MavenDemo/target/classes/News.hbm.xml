<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hiberante/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.maple.hibernate.entity.News" table="NEWS">
        <id name="id" type="java.lang.Integer">
            <column name="ID"/>
            <generator class="native"/>
        </id>
        <property name="author" type="java.lang.String" column="AUTHOR"/>
        <property name="title" type="java.lang.String" column="TITLE"/>
        <property name="date" type="java.util.Date" column="DATE"/>
    </class>
</hibernate-mapping>
